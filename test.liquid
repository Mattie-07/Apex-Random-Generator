<script>
    const card = document.getElementById("meals")
    const styleButton = document.getElementById("styleButton")
    const image = document.getElementById("imageSelect")
    const nutrition = document.getElementById("nutritionDropdown")
    const dropdownContent = document.getElementById("dropdownContent");
    const checkMark = document.getElementById("check");
    const checkSwoosh = document.getElementById("fa-check")
    const cardChange = document.querySelector("#meals");
    const classes = meals.classList;

    styleButton.addEventListener("click", function () {
        const pickedMeal = classes.toggle("mealCardSelected");

        if (pickedMeal) {
            checkMark.style.display = "block";
            card.style.backgroundColor = "#a4406B"
            nutrition.style.color = "white"
            dropdownContent.style.color = "#a4406B"
            checkMark.style.display = "block"
            checkMark.style.backgroundColor = "#A4406B"
            checkSwoosh.style.color = "white"
        }
        else {
            checkMark.style.display = "none"
            card.style.backgroundColor = "white"
            nutrition.style.color = "#a4406B"
            dropdownContent.style.color = "#a4406B"
            checkSwoosh.style.color = "white"
        }
    })


